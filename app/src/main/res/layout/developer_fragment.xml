<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/image_pager"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@mipmap/kistheader2"
                android:scaleType="centerCrop"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#000"
                android:layout_below="@id/image_pager"/>
            <LinearLayout
                android:orientation="vertical"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/image_pager">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingRight="25dp"
                    android:paddingLeft="25dp">
                    <TextView
                        android:id="@+id/title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="KEEP IT SIMPLE TRAVEL"
                        android:layout_gravity="center_horizontal"
                        android:textSize="18sp"
                        android:typeface="serif"
                        android:textColor="#000"
                        android:textStyle="bold"
                        android:layout_marginTop="20dp"/>
                    <TextView
                        android:id="@+id/desc1"
                        android:typeface="sans"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:textSize="16sp"
                        android:text="@string/dev_des1"
                        android:textColor="#000"
                        android:layout_marginTop="15dp"/>
                    <TextView
                        android:id="@+id/desc2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:textSize="16sp"
                        android:typeface="sans"
                        android:text="@string/dev_des2"
                        android:textColor="#000"
                        android:layout_marginTop="5dp"/>
                    <TextView
                        android:id="@+id/desc3"
                        android:text="@string/dev_desc3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:textSize="16sp"
                        android:typeface="sans"
                        android:textColor="#000"
                        android:layout_marginTop="5dp"/>
                    <TextView
                        android:id="@+id/desc4"
                        android:text="@string/dev_desc4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:textSize="16sp"
                        android:typeface="sans"
                        android:textColor="#000"
                        android:layout_marginTop="5dp"/>
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>
