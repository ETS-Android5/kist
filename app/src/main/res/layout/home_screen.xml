<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background">
    <RelativeLayout
        android:id="@+id/main"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background">
        <RelativeLayout
            android:id="@+id/top_bar"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:background="@color/grey">
            <LinearLayout
                android:id="@+id/back"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:visibility="gone">
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:padding="4dp"
                    android:src="@drawable/ic_back"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Back"
                    android:textSize="18sp"
                    android:textColor="#1468a7"/>
            </LinearLayout>
            <ImageView
                android:id="@+id/menu"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:padding="5dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@mipmap/menu"
                android:layout_marginRight="10dp"/>
            <TextView
                android:id="@+id/headerName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="THE BLOCKS APP"
                android:textStyle="bold"
                android:textColor="#000"
                android:textSize="18sp"/>
        </RelativeLayout>
        <View
            android:id="@+id/topLine"
            android:layout_below="@id/top_bar"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#000"/>
        <RelativeLayout
            android:id="@+id/bottom_bar"
            android:layout_width="match_parent"
            android:layout_height="49dp"
            android:background="@color/grey"
            android:layout_alignParentBottom="true">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:weightSum="5">
                <ImageView
                    android:id="@+id/booking"
                    android:layout_weight="1"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@mipmap/booking"/>
                <ImageView
                    android:id="@+id/currency"
                    android:layout_weight="1"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@mipmap/currency"/>
                <ImageView
                    android:id="@+id/info"
                    android:layout_weight="1"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@mipmap/info"/>
                <ImageView
                    android:id="@+id/map"
                    android:layout_weight="1"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@mipmap/toolbar_map"/>
                <ImageView
                    android:id="@+id/home"
                    android:layout_weight="1"
                    android:alpha="0.5"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@mipmap/toolbar_home"/>
            </LinearLayout>
        </RelativeLayout>
        <View
            android:id="@+id/bottom_line"
            android:layout_above="@id/bottom_bar"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#000"/>
        <example.com.kist.Constant.NonSwipingViewPager
            android:id="@+id/main_pager"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:layout_above="@id/bottom_line"
            android:layout_below="@id/topLine"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:layout_marginLeft="60dp"
        android:background="#fff"
        android:layout_gravity="right">
        <View
            android:layout_width="3dp"
            android:layout_height="match_parent"
            android:background="#000"
            android:alpha="0.3"/>
        <TextView
            android:id="@+id/head"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="MENU"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginTop="20dp"/>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/head">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/head"
                android:layout_alignParentRight="true"
                android:layout_marginTop="20dp"
                android:orientation="vertical"
                android:weightSum="8">
                <LinearLayout
                    android:id="@+id/menu_home"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingLeft="25dp"
                    android:background="@drawable/menu_selector"
                    android:paddingRight="25dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:text="HOME"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_marginTop="20dp"/>
                    <View
                        android:layout_marginTop="15dp"
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:background="#7a000000"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/menu_details"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingLeft="25dp"
                    android:layout_weight="1"
                    android:background="@drawable/menu_selector"
                    android:paddingRight="25dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:text="About our hostel"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_marginTop="20dp"/>
                    <View
                        android:layout_marginTop="15dp"
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:background="#7a000000"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/menu_guide"
                    android:background="@drawable/menu_selector"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingLeft="25dp"
                    android:layout_weight="1"
                    android:paddingRight="25dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:text="LOCAL GUIDE"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_marginTop="20dp"/>
                    <View
                        android:layout_marginTop="15dp"
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:background="#7a000000"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/menu_bookings"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/menu_selector"
                    android:orientation="vertical"
                    android:paddingLeft="25dp"
                    android:layout_weight="1"
                    android:paddingRight="25dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:text="Bookings"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_marginTop="20dp"/>
                    <View
                        android:layout_marginTop="15dp"
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:background="#7a000000"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/menu_notice"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingLeft="25dp"
                    android:background="@drawable/menu_selector"
                    android:layout_weight="1"
                    android:paddingRight="25dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:text="Noticeboard"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_marginTop="20dp"/>
                    <View
                        android:layout_marginTop="15dp"
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:background="#7a000000"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/menu_contact"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/menu_selector"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:paddingLeft="25dp"
                    android:paddingRight="25dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:text="Contact Us"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_marginTop="20dp"/>
                    <View
                        android:layout_marginTop="15dp"
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:background="#7a000000"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/menu_feedback"
                    android:layout_width="match_parent"
                    android:background="@drawable/menu_selector"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingLeft="25dp"
                    android:paddingRight="25dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:text="Feedback"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_marginTop="20dp"/>
                    <View
                        android:layout_marginTop="15dp"
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:background="#7a000000"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/menu_developer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:paddingLeft="25dp"
                    android:background="@drawable/menu_selector"
                    android:paddingRight="25dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:text="Developer"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_marginTop="20dp"/>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </RelativeLayout>
</android.support.v4.widget.DrawerLayout>